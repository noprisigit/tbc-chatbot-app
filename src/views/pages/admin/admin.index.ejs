<div class="card shadow">
  <div class="card-header d-flex align-items-center justify-content-between">
    <h3 class="card-title">
      Daftar Admin
    </h3>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAdmin">
      <i class="fas fa-plus me-1"></i>
      Tambah Admin
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="adminTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Email</th>
            <th>Status</th>
            <th>Tanggal Dibuat</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>

<div class="modal fade" id="modalAdmin" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="exampleModalLabel">Tambah Customer</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form>
        <div class="modal-body">
          <div class="form-group mb-3">
            <label for="name" class="form-label">Nama</label>
            <input type="text" class="form-control" name="name" id="name">
          </div>
          <div class="form-group mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" name="email" id="email">
          </div>
          <!-- <div class="mb-3">
            <label for="adminRole" class="form-label">Role</label>
            <select id="adminRole" class="form-control">
               <option value="admin">Admin</option>
               <option value="superadmin">Superadmin</option>
            </select>
         </div> -->
          <div class="form-group mb-3" id="adminPasswordWrapper">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" id="password">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times me-1"></i>
            Batal
          </button>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane me-1"></i>
            Kirim
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

