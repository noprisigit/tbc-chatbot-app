<div class="card shadow">
  <div class="card-header d-flex align-items-center justify-content-between">
    <h3 class="card-title">
      Daftar Consumer
    </h3>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCreateCustomer">
      <i class="fas fa-plus me-1"></i>
      Tambah Konsumen
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>No WhatsApp</th>
            <th>Tanggal Daftar</th>
            <th>Status</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>

<div class="modal fade" id="modalCreateCustomer" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="exampleModalLabel">Tambah Customer</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form>
        <div class="modal-body">
          <div class="form-group mb-3">
            <label for="name" class="form-label">Nama Konsumen</label>
            <input type="text" name="name" id="name" class="form-control" placeholder="Masukkan Nama Konsumen">
          </div>
          <div class="form-group">
            <label for="phone" class="form-label">Nomor Whatsapp</label>
            <input type="text" name="phone" id="phone" class="form-control" placeholder="Masukkan Nomor Whatsapp">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times me-1"></i>
            Batal
          </button>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane me-1"></i>
            Kirim
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

